$transitionIn = transform 200ms cubic-bezier(.04,.85,.55,1.14)
$transitionOut = transform 200ms ease-out

html, body
    margin 0
    padding 0
    width 100%
    font-family 'proxima nova'
    overflow-x hidden

*
    box-sizing border-box

html
    height 100%
body
    min-height 100%

.container
    padding 0 10px

.site-wrapper
    width 100%
    min-height 100%
    position relative

.sidebar
    background #ddd
    width 250px
    height 100%
    float left
    position fixed
    .dashboard-info
        padding 0 10px

.progress-bar-outer
    width 100%
    height 30px
    background #777
    margin 0.5em 0
    position relative
    text-align left
    transition transform 200ms cubic-bezier(.04,.85,.55,1.14)
    overflow hidden
    .progress
        transform-origin 0 0
        position absolute
        left 0%
        top 0
        width 100%
        height 100%
        background #333
        transform scaleX(0)
        transition transform 200ms cubic-bezier(.04,.85,.55,1.14)

.main-content
    width calc(100% - 250px)
    height 100%
    float left
    position relative
    left 250px
    box-sizing border-box
    overflow hidden
    p
        font-family 'proxima nova', helvetica, sans-serif
        font-size 1.2em
        padding 0 20px
        color #666

.content-title
    color white
    background blue
    margin-top 0
    margin-bottom 0.5em
    padding 0.5em
    span
        display block
        position relative

.signout
    cursor pointer

.content
    text-align center
    transition all 200ms ease-out
    button
        cursor pointer
        border none
        outline none
        border-radius 5px
        font-family 'proxima nova'
        font-weight 100
        text-transform uppercase
        font-size 1em
        letter-spacing 0.05em
        color white
        background #666
        padding 15px 40px
        transition all 200ms ease-out
        &:hover
            background #888
            transition all 200ms ease-out
    h2
        cursor pointer

.main-nav
    list-style none
    margin 0
    padding 0
    margin-top 50px
    text-align left
    li
        color blue
        text-transform uppercase
        letter-spacing 0.1em
        position relative
        display inline-block
        cursor pointer
        &:before
            content ''
            display block
            width 100%
            height 100%
            position absolute
            top 0
            left 0
            background white
            transform scaleX(0)
            transition $transitionOut
            transform-origin 0
        &:after
            content ''
            display block
            position absolute
            top 0
            left 0
            width 100%
            height 100%
            z-index 1
            background blue
            transform scaleX(0)
            transition $transitionOut
            transform-origin 0
        &:hover
            &:before
                transform scaleX(1)
                transition $transitionIn
        &.active
            background white
            color white
            &:after
                transform scaleX(1)
                transition $transitionIn
        a
            padding 10px
            color inherit
            text-decoration none
            position relative
            display inline-block
            z-index 2

.siteTransition-enter
    background black


.siteTransition-leave
    background purple
